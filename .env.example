# Claude Memory System Configuration
# Copy this file to .env and customize values as needed

# Database settings
MEMORY_DB_PATH=memory.db
TEST_DB_PATH=test.db

# API settings
MEMORY_API_HOST=127.0.0.1
MEMORY_API_PORT=8001

# Security settings
SECRET_KEY=your-secret-key-here-replace-with-secure-value
TOKEN_ALGORITHM=HS256

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# Timeouts (seconds)
CONNECTION_TIMEOUT=5
READ_TIMEOUT=10

# Allowed project directories (comma-separated)
ALLOWED_PROJECT_DIRS=/Users/beck/Documents

# Logging settings
LOG_LEVEL=INFO
LOG_DIR=logs